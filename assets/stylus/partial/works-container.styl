#works-container
  clearfix()
  padding $global-padding
  padding-top 10px

  .photo-container
    display block
    float left
    box-sizing border-box
    width "calc(50% - %s)" % $global-padding
    .photo
      width 100%
      height 550px
      background-size cover
      background-position center center
      box-sizing border-box
      line-height 0 !important
      +below(___)
        height 400px
      +below(__)
        height 300px
      +below(_)
        height 250px
    .caption
      big-text()
      line-height 1 !important
      box-sizing border-box
      margin $global-padding 0
      &:hover
        color: $link-hover-color
    +below(__)
      width "calc(50% - %s)" % 3px

  &.even
    .photo-container
      &:nth-child(3n+1)
        clearfix()
        width 100%
      &:nth-child(3n+2)
      &:nth-child(3n+3)
        .photo
          +below(_)
            height 220px
          +below(_)
            height 180px
      &:nth-child(3n+2)
        margin-right $global-padding
        +below(__)
          margin-right 3px
      &:nth-child(3n+3)
        margin-left $global-padding
        +below(__)
          margin-left 3px

  &.odd
    .photo-container
      &:nth-child(3n+1)
      &:nth-child(3n+2)
        .photo
          +below(_)
            height 220px
          +below(_)
            height 180px
      &:nth-child(3n+1)
        margin-right $global-padding
        +below(__)
          margin-right 3px
      &:nth-child(3n+2)
        margin-left $global-padding
        +below(__)
          margin-left 3px
      &:nth-child(3n+3)
        clearfix()
        width 100%
