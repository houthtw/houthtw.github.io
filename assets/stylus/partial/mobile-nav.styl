.mobile-nav-button
  position fixed
  top $global-padding
  right $global-padding
  z-index 426892
  width 2rem
  height 25px
  cursor pointer
  display none
  +below(__)
    display block
  +above(__)
    display none !important
  &.open
    span
      background-color rgba(0,0,0,0.0)
      transition-delay 0.2s
      &:after
      &:before
        margin-top 0
        transition-delay 0s, 0.2s
      &:after
        transform rotate(-25deg)
      &:before
        transform rotate(25deg)
  span
    margin 0 auto
    position relative
    top 10px
    width 2rem
    height 5px
    background $global-text-color
    transition-duration 0s
    transition-delay 0.2s
    &:after
    &:before
      content ''
      width 2rem
      height 5px
      position absolute
      display block
      background $global-text-color
    &:after
      margin-top 6px
    &:before
      margin-top -6px
    &:after
    &:before
      transition-property margin, transform
      transition-duration 0.2s
      transition-delay 0.2s, 0s

.mobile-nav
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  width 100vw
  height 100vh
  opacity 0
  z-index -1
  background rgb(0,0,255)
  background linear-gradient(180deg, #00f 0%, #00f 60%, rgba(0,0,255,0) 120%)
  transition all 500ms cubic-bezier(0.165, 0.84, 0.44, 1)
  &.open
    opacity 1
    z-index 42689
  ul
    list-style none
    margin 0
    padding 0
    padding-right 2.6rem
    li
      font-size $bigtext-font-size
      line-height $bigtext-line-height
      color $bigtext-text-color
      padding 0
      list-style none
      text-align right
      line-height 1.4
      margin-right $global-padding
      font-size $bigtext-font-size - 1.2
    &:nth-child(1)
      margin-top 40px
    &:nth-child(2)
      margin-top 50px
  +above(__)
    display none !important
