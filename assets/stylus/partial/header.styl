#header
  position fixed
  top 0
  left 0
  right 0
  background white
  clearfix()

  .brand
    float right
    font-size 2.6rem
    line-height 2.6rem
    padding 0

  ul
    list-style none
    padding 0
    margin 0
    float left
    li
      font-size 2.6rem
      line-height 2.6rem
      list-style none
      display inline-block
      margin-right 15px
      &:hover
        font-style italic
