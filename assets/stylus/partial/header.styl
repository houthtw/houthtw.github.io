.header
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  padding $global-padding $global-padding 0 $global-padding
  background $global-background

  .header-nav
    navigation()

  .mobile-nav-button
    position fixed
    top $global-padding
    right $global-padding
    z-index 426892
    display none
    width 2rem
    height 25px
    cursor pointer
    span
      width 100%
      height 4px
      display block
      position absolute
      left 0
      background $global-text-color
      transition .25s ease-in-out
      transform rotate(0deg)
      &:first-child
        top 4px
      &:last-child
        top 16px
    &.open
      span
        top 11px
        left -6px
        height 3px
      span:first-child
        transform: rotate(135deg)
      span:last-child
        transform: rotate(45deg)
    +below(__)
      display block
    +above(__)
      display none !important

  .mobile-nav
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    opacity 0
    z-index -1
    background rgb(0,0,255)
    background linear-gradient(180deg, rgba(0,0,255,1) 0%, rgba(0,0,255,1) 25%, rgba(0,0,255,0) 100%)
    transition all 1000ms cubic-bezier(0.165, 0.84, 0.44, 1)
    &.open
      z-index 42689
      opacity 1
    ul
      list-style none
      margin 0
      padding 0 $global-padding
      li
        big-text()
        list-style none
        text-align right
        line-height 1.2
        margin-right $global-padding
      &:nth-child(1)
        margin-top 40px
      &:nth-child(2)
        margin-top 50px
    +above(__)
      display none !important

  .brand
    position fixed
    top 20px
    right 30px

    img
      max-width 200px
      height auto

    +below(__)
      display none
