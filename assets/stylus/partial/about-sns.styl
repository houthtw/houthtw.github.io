.about-sns
  padding 0 $global-padding

  +above(_____)
    padding 0 $global-padding*1.5
  +above(______)
    padding 0 $global-padding*4

  span
    big-text()
    line-height 1.2
    margin-right $bigtext-item-margin
    +below(___)
      margin-right $bigtext-item-margin - .2
    +below(__)
      display block
      margin-right 0
    +above(_____)
      margin-right $bigtext-item-margin * 1.5
    +above(______)
      margin-right $bigtext-item-margin * 4
