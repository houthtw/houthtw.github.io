navigation-text()
  font-size $navigation-font-size
  line-height $navigation-line-height
  color $navigation-text-color
  padding 0

  &::after
    content ""
    height 100%
    display inline-block

  +below(___)
    font-size $navigation-font-size - .2
  +below(__)
    font-size $navigation-font-size - .8
  +below(_)
    font-size $navigation-font-size - 1
