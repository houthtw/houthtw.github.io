navigation()
  list-style none
  margin 0
  padding 0
  float left
  li
    navigation-text()
    list-style none
    display inline-block
    margin-right $navigation-item-margin
    +below(___)
      margin-right $navigation-item-margin - .2
    +below(__)
      margin-right $navigation-item-margin - .5
    +below(_)
      margin-right $navigation-item-margin - 1
    &:hover
      font-style italic
