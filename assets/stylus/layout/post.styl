#container.post
  width 100%
  height auto
  padding 0 0 2.6rem
  margin 0
  margin-top $bigtext-line-height

  h1
    display block
    font-size $bigtext-font-size
    line-height 1
    padding 17px $global-padding 0
    +below(___)
      font-size $bigtext-font-size - .2
    +below(__)
      font-size $bigtext-font-size - .8
    +below(_)
      font-size $bigtext-font-size - 1

  div
    line-height 0
    &.description
    &.information
      margin-top $global-line-height
      padding 0 $global-padding
      p
        line-height $global-line-height
        margin 0
        margin-bottom $global-line-height
        +below(___)
          font-size $global-font-size - 0.2
          line-height $global-line-height - 0.4
        +below(__)
          font-size $global-font-size - 0.4
          line-height $global-line-height - 0.6
        +below(_)
          font-size $global-font-size - 0.6
          line-height $global-line-height - 0.8
    img
      width 100%
      height auto
      line-height 0
