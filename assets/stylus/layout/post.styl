#container
  width 100%
  height auto
  padding 0 0 100px
  margin 0
  margin-top $navigation-line-height

  h1
    display block
    font-size $navigation-font-size
    line-height 1
    padding 15px 5px 0
    +below(___)
      font-size $navigation-font-size - .2
    +below(__)
      font-size $navigation-font-size - .8
    +below(_)
      font-size $navigation-font-size - 1

  div
    line-height 0
    &.description
      margin-top $global-line-height
      padding 0 5px
      p
        line-height $global-line-height
        margin-bottom $global-line-height
        +below(___)
          font-size $global-font-size - 0.2
          line-height $global-line-height - 0.4
        +below(__)
          font-size $global-font-size - 0.4
          line-height $global-line-height - 0.6
        +below(_)
          font-size $global-font-size - 0.6
          line-height $global-line-height - 0.8
    img
      max-width 100%
      height auto
      line-height 0
